	<div class="row">  			
		{% for base in base_all %}
			{% if base.published == true %}
			
			<div class="col-lg-6" style="margin-bottom:20px;">
			<h2>n°{{ base.id }} {{ base.title }}</h2>	
			<p>Publié par {{ base.author }}</p>
			<p>{{ base.content }}</p>	
			<p><a class="btn btn-primary" href="view/{{ base.id }}" role="button">Visualiser le fichier &raquo;</a></p>
			</div>
			
			{% endif %}
		{% endfor %}	
	</div>	

{% endblock %}	  
	