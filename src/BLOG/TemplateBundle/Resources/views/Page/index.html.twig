	<!-- Caroussel -->
	{% include 'BLOGTemplateBundle:Theme:caroussel.html.twig' %}	
	
    <!-- Phrase d'accroche -->
    <div class="jumbotron" style="margin-bottom:-40px">
      <h1>My 3D Collection</h1>
      <p class="lead">Votre bibliotheque en ligne de fichier 3D !<a class="btn btn-lg btn-success" style="margin-left: 30px;" href="#" role="button">Inscription</a></p>
